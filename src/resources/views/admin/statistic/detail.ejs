<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1>Form Order Detail</h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><a href="#">Home</a></li>
          <li class="breadcrumb-item active">Form Order Detail</li>
        </ol>
      </div>
    </div>
  </div>
  <!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
  <div class="container-fluid">
    <div class="row">
      <!-- left column -->
      <div class="col-md-12">
        <!-- Form Add Product elements -->
        <div class="card card-primary">
          <div class="card-header">
            <h3 class="card-title">Order Details</h3>
          </div>
          <table id="example2" class="table table-bordered table-hover">
            <thead>
              <tr>
                <th>STT</th>
                <th>Product Code</th>
                <th>Thumbnail</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Created At</th>
                <!-- <th>Options</th> -->
              </tr>
            </thead>
            <tbody>
              <% payment.forEach(function (item,index) { %>
                <tr>
                  <td><%= index+1 %></td>
                  <td><%= item.product_code %></td>
                  <td><img src="<%= item.thumbnail %>" alt="" width="200px"></td>
                  <td><%= item.quantity %></td>
                  <td>
                    <%= new Intl.NumberFormat('vi-VN', { style: 'currency',
                    currency: 'VND', maximumFractionDigits: 9}).format(item.price)
                    %>
                  </td>
                  <td><%= item.created_at %></td>
                </tr>
                <% }) %>
            </tbody>
            <tfoot>
              <tr>
                <th>STT</th>
                <th>Product Code</th>
                <th>Thumbnail</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Created At</th>
                <!-- <th>Options</th> -->
              </tr>
            </tfoot>
          </table>          
        </div>
        <!-- /.card -->
      </div>
      <div class="col-md-6">
        
      </div>
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</section>
