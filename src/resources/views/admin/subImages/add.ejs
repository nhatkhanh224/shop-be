<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1>Form Add Sub Images</h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><a href="#">Home</a></li>
          <li class="breadcrumb-item active">Form Add Sub Images</li>
        </ol>
      </div>
    </div>
  </div>
  <!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
  <div class="container-fluid">
    <div class="row">
      <!-- left column -->
      <div class="col-md-6">
        <!-- Form Add Product elements -->
        <div class="card card-primary">
          <div class="card-header">
            <h3 class="card-title">Quick Example</h3>
          </div>
          <!-- /.card-header -->
          <!-- form start -->
          <form
            role="form"
            method="POST"
            action="/multiple-upload/<%= product_id %>" method="POST" enctype="multipart/form-data"
          >
            <div class="card-body">
              <div class="form-group">
                <label for="exampleFormControlFile1">Sub images</label>
                <input
                  type="file"
                  class="form-control-file"
                  name="many-files" 
                  multiple 
                  id="input-many-files"
                  multiple='multiple'
                  accept='image/*'
                />
              </div>
            </div>
            <!-- /.card-body -->
            <div class="card-footer">
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </form>
        </div>
        <!-- /.card -->
      </div>
    </div>
    <hr>
        <div class="">
          <div class="preview-images ml-2 d-flex align-items-center"></div>
        </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</section>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script>
  $(document).ready(function() {
      // Multiple images preview in browser - trungquandev.com
      let imagesPreview = function(input, placeToInsertImagePreview) {
          if (input.files) {
              let filesAmount = input.files.length;
              for (i = 0; i < filesAmount; i++) {
                  let reader = new FileReader();
                  reader.onload = function(event) {
                      $($.parseHTML("<img>")).attr("src", event.target.result).attr("width", "200px").attr("height", "230px").attr("class", "ml-2").appendTo(placeToInsertImagePreview);
                  }
                  reader.readAsDataURL(input.files[i]);
              }
          }
      };

      $("#input-many-files").on("change", function() {
          imagesPreview(this, "div.preview-images");
      });
  });
</script>

