<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1>Form Edit Slide</h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><a href="#">Home</a></li>
          <li class="breadcrumb-item active">Form Edit Slide</li>
        </ol>
      </div>
    </div>
  </div>
  <!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
  <div class="container-fluid">
    <div class="row">
      <!-- left column -->
      <div class="col-md-6">
        <!-- Form Edit Slide elements -->
        <div class="card card-primary">
          <div class="card-header">
            <h3 class="card-title">Quick Example</h3>
          </div>
          <!-- /.card-header -->
          <!-- form start -->
          <form
            role="form"
            method="POST"
            action="/slide-update/<%= slide.id %>"
            enctype="multipart/form-data"
          >
            <div class="card-body">
              <div class="form-group">
                <label for="exampleFormControlFile1">Thumnail</label>
                <img src="<%= slide.thumbnail %>" alt="" width="200px" class="ml-3">
              </div>
              <div class="form-group">
                <label for="exampleFormControlFile1">Change thumbnail</label>
                <input
                  type="file"
                  class="form-control-file"
                  name="thumbnail"
                  id="exampleFormControlFile1"
                  accept='image/*'
                />
              </div>
            </div>
            <!-- /.card-body -->
            <div class="card-footer">
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </form>
        </div>
        <!-- /.card -->
      </div>
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</section>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

